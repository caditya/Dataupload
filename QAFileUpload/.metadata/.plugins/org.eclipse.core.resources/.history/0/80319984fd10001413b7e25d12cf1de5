    /* IE6 specific branch (prefixed with "_") */
    _margin-bottom:-2px;
}

/* single tab */
#flowtabs li {
    float:left;
    margin:0;
    padding:0;
    text-indent:0;
    list-style-type:none;
}

/* a- tag inside single tab */
#flowtabs li a {
    background: url(/media/img/tabs/blue_panes.jpg) no-repeat !important ;
    display:block !important;
    height: 31px !important;
    width: 189px !important;
    padding:0px !important;
    margin:0px !important;

    /* font decoration */
    color:#000 !important;
    font-size:12px !important;
    line-height:33px !important;
    text-align:center !important;
    text-decoration:none !important;
}

/* adjust the background image position on each tab */
#flowtabs #t1           { background-position: 0 0 !important; }
#flowtabs #t2           { background-position: -189px 0 !important; }
#flowtabs #t3           { background-position: -378px 0 !important; }
#flowtabs #t4           { background-position: -567px 0 !important; width:192px !important;}

/* mouseover state */
#flowtabs a:hover       { color:#fff !important;    }
#flowtabs #t1:hover     { background-position:      0 -33px !important; }
#flowtabs #t2:hover     { background-position: -189px -33px !important; }
#flowtabs #t3:hover     { background-position: -378px -33px !important; }
#flowtabs #t4:hover     { background-position: -567px -33px !important; }

/* currently selected tabs */
#flowtabs a.current     { cursor:default; color:#fff; line-height:34px; }
#flowtabs #t1.current { background-position:      0 -66px; }
#flowtabs #t2.current { background-position: -189px -66px; }
#flowtabs #t3.current { background-position: -378px -66px; }
#flowtabs #t4.current { background-position: -567px -66px; }


